<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendasActivity">

    <CheckBox
        android:id="@+id/idCheckTeclado"
        android:layout_width="203dp"
        android:layout_height="57dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:text="Teclado | R$ 1.850,00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/idCheckViolao"
        android:layout_width="203dp"
        android:layout_height="57dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="40dp"
        android:text="ViolÃ£o | R$ 800,00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/idCheckViolino"
        android:layout_width="203dp"
        android:layout_height="57dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="112dp"
        android:text="Violino | R$ 450,50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/idCheckGuitarra"
        android:layout_width="203dp"
        android:layout_height="57dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="112dp"
        android:text="Guitarra | R$ 1500,00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnCalcular"
        android:layout_width="197dp"
        android:layout_height="58dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="72dp"
        android:onClick="calcularVendas"
        android:text="Calcular"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCheckGuitarra" />

    <Button
        android:id="@+id/idBtnVoltar"
        android:layout_width="197dp"
        android:layout_height="58dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="264dp"
        android:onClick="voltarMenu"
        android:text="Voltar"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCheckGuitarra" />

    <TextView
        android:id="@+id/idTxtResultado"
        android:layout_width="251dp"
        android:layout_height="84dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="28dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBtnCalcular" />
</androidx.constraintlayout.widget.ConstraintLayout>